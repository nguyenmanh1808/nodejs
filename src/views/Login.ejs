    <div class="main">
        <form action="/user/login" method="POST" class="form" id="form-1">
            <h3 class="heading">Đăng nhập tài khoản</h3>
            <p class="desc"></p>

            <div class="spacer"></div>

            <div class="form-group">
                <label for="name" class="form-label">Email </label>
                <input id="name" name="name" type="text" placeholder="VD: abc@gmail.com" class="form-control">
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control">
                <span class="form-message"></span>
            </div>
            <div class="login_orther_tiltle">
                Hoặc đăng nhập bằng
            </div>
            <div class="login_orther">
                <div id="Logingoogle">
                    <div class="google-img">
