                                        </div>
                                        <h5 class="content-product-item__name">
                                            <%=movies.items[i].name %>
                                        </h5>

                                    </a>
                                </div>

                                <% } %>
                        </div>
                        <div class="content-products-more">
                            <% let c=parseInt(movies.pagination.currentPage) +1 %>
                                <a href="/page/<%=c%>" class="btn content-products-more-btn">Xem
                                    thêm</a>
                        </div>

                    </div>
                    <div class="content-products-school-supplies">
                        <div id="tiltle3" class="title-product">
