    <title>Document</title>

</head>

<body>


    <%- include('includes/head.ejs') %>
        <div class="app">
            <div class="grid wide">


                <div class="products_container">

                    <div class="content-products-school-supplies">
                        <div id="tiltle1" class="title-product">
                            <div class="product-item active">
                                <span href="" class="product-tiltle   "> Phim bộ </span>
                            </div>
                        </div>
                        <div style="margin-left: 12px;" class="row">
                            <% for(let i=0; i < 5; i++) { %>
                                <div class=" content-product-list c-2-5 ">
                                    <a class="content-product-item link" href="/phim/<%=movies.items[i].slug %>">
                                        <div class="content-product-item__img" style="background-image:
                                            url(https://img.ophim.live/uploads/movies/<%=movies.items[i].thumb_url%>)"
                                            ;>
                                        </div>
                                        <h5 class="content-product-item__name">
                                            <%=movies.items[i].name %>
                                        </h5>
                                    </a>
                                </div>

                                <% } %>
                        </div>
                        <div class="content-products-more">
                            <% let a=parseInt(movies.pagination.currentPage) +1 %>
                                <a href="/page/<%=a%>" class="btn content-products-more-btn">Xem
                                    thêm</a>
                        </div>

                    </div>
                    <div class="content-products-school-supplies">
